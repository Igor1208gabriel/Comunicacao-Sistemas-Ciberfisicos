{
  "name": "rolling desktop",
  "postCreateCommand": "rosdep install --from-paths src --ignore-src -r -y && colcon build --symlink-install",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind",
  // "workspaceFolder": "/${localWorkspaceFolderBasename}/ROS2/workspace",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind"
],
"features": {
	"ghcr.io/devcontainers/features/python:1": {},
  "ghcr.io/prulloac/devcontainer-features/latex:1": {}
},
"customizations": {
  "vscode": {
    "extensions": [
      "Ranch-Hand-Robotics.rde-pack",
      "ms-vscode.cpptools",
      "JamesYu.latex-workshop",
      "github.vscode-github-actions",
      "ms-python.python"
    ]
  }
}

}
